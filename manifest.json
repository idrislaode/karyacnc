{
  "name": "KaryaCNC",
  "description": "CAM software for CNC/KaryaController",
  "version": "1.0",
  "manifest_version": 2,
  "sockets": {
    "tcp": {
      "connect": "*"
    },

    "tcpServer": {
      "listen": "*"
    }
  },
  
  "icons": {
    "16": "serial.png",
    "128": "serial.png"
  },
  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  }
  ,"permissions": ["serial","storage","*://*/*/*","http://*/upload","http://*/startprint","http://*/stopprint"]
  ,"content_security_policy": "script-src 'nonce-xyz123'; style-src 'nonce-xyz123'"

}
